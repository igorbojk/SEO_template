        main.membership-page
            section.banner
                .container
                    img(src="assets/images/membership-banner.jpg")
                    .row
                        .col.col-xl-8.offset-xl-2.col-lg-8.offset-lg-2.col-md-10.offset-md-1.col-sm-10.offset-sm-1.col-12.offset-0
